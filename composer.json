{
    "name": "markdown-converter/app",
    "description": "A simple Markdown to HTML converter",
    "type": "project",
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test:unit": "phpunit tests",
        "convert-markdown": "App\\MarkdownConverter::convertFile"
    },
    "config": {
        "process-timeout": 0
    }
}
    
