{
    "name": "markdown-converter/app",
    "description": "A simple Markdown to HTML converter",
    "type": "project",
    "require": {
        "php": "^7.4|^8.0",
        "splitbrain/php-cli": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Acme\\TextTools\\Markdown\\": "src/",
             "Acme\\TextTools\\Markdown\\Examples\\": "examples/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Acme\\TextTools\\Markdown\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests --testdox",
    },
    "bin": [
        "bin/markdown-converter"
    ],
    "config": {
        "process-timeout": 0
    }
}
